{
  "name": "thinkdeep",
  "author": "Hayden McParlane hayden.mcparlane@gmail.com",
  "scripts": {
    "monorepo:setup": "yarn install",
    "monorepo:restore": "yarn run monorepo:nuke; yarn run monorepo:setup",
    "monorepo:nuke": "lerna clean --yes; rm -rf node_modules; rm -f yarn.lock; rm -f package-lock.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "echo 'Not yet implemented'"
    }
  },
  "lint-staged": {
    "*.js": [
      "./node_modules/.bin/eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.7.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-vaadin": "^0.2.7",
    "husky": "^1.1.2",
    "lerna": "^3.3.0",
    "lint-staged": "^7.3.0",
    "prettier": "1.14.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "private": true
}
