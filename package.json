    "rollup-plugin-babel": "^4.3.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-serve": "^1.1.0",
    "serve": "^10.1.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "log4js": "^3.0.6",
    "prettier": "^2.2.1"
