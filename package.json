{
  "name": "thinkdeep",
  "author": "Hayden McParlane <hayden.mcparlane@gmail.com> (https://www.linkedin/in/haydenmcp)",
  "scripts": {
    "monorepo:start": "webpack-dev-server",
    "monorepo:stop": "echo 'Not yet implemented'",
    "monorepo:setup": "yarn install",
    "monorepo:restore": "yarn run monorepo:nuke; yarn run monorepo:setup",
    "monorepo:nuke": "lerna clean --yes; rm -rf node_modules yarn.lock package-lock.json",
    "monorepo:test": "yarn run components:test && yarn run microservices:test",
    "components:test": "yarn run components:test:unit && yarn run components:test:integration",
    "components:test:integration": "echo 'not yet implemented'",
    "components:test:unit": "karma start",
    "microservices:test": "yarn run microservices:test:unit && yarn run microservices:test:integration",
    "microservices:test:integration": "echo 'not yet implemented'",
    "microservices:test:unit": "echo 'not yet implemented'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "echo 'Not yet implemented'"
    }
  },
  "lint-staged": {
    "*.js": [
      "./node_modules/.bin/eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@thinkdeep/deep-button": "^0.0.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.3",
    "eslint": "^5.7.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-vaadin": "^0.2.7",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.2",
    "istanbul-instrumenter-loader": "^3.0.1",
    "karma": "^3.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.4",
    "karma-firefox-launcher": "^1.1.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sinon-chai": "^2.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^4.0.0-rc.2",
    "lerna": "^3.3.0",
    "lint-staged": "^7.3.0",
    "mocha": "^5.2.0",
    "null-loader": "^0.1.1",
    "prettier": "1.14.3",
    "sinon": "^6.3.4",
    "sinon-chai": "^3.2.0",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9"
  },
  "workspaces": [
    "packages/*"
  ],
  "publishConfig": {
    "registry": "https://www.npmjs.com/org/thinkdeep"
  },
  "private": true
}
