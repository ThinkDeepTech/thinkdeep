{
  "name": "thinkdeep",
  "author": "Hayden McParlane hayden.mcparlane@gmail.com",
  "scripts": {
    "monorepo:setup": "yarn install",
    "monorepo:nuke": "lerna clean --yes; rm -rf node_modules; rm -f yarn.lock; rm -f package-lock.json"
  },

  "husky": {
    "hooks": {
      "pre-commit": "echo 'Not yet implemented for commit'",
      "pre-push": "echo 'Not yet implemented'"
    }
  },

  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },

  "devDependencies": {
    "husky": "^1.1.2",
    "lerna": "^3.3.0",
    "lint-staged": "^7.3.0",
    "prettier": "1.14.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "private": true
}
